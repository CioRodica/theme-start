/**
 * @file
 * Messages example.
 */
#}

{% if kss_styles %}
  <style>
    #kssref-components-messages .messages {
      position: static;
    }
  </style>
{% endif %}

{% spaceless %}
  <div class="messages js-messages {{ modifier_class }}"{{ attributes }}>
    <div class="message__inner">
      <ul class="messages__list">
        <li class="messages__item">{{ message }}</li>
      </ul>

      <div class="messages__close">
        <button class="button js-messages-close" type="button">
          {{ 'Close'|t }}
        </button>
      </div>
    </div>
  </div>
{% endspaceless %}
