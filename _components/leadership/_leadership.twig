{#
/**
 * @file
 * Card component.
 *
 * Available variables:
 * - attributes: raw.
 * - modifier_class: string.
 * - tag: string.
 * - image: raw.
 * - name: raw.
 * - position: raw.
 * - body: raw.
 * - read_more: raw.
 */
#}

{% if kss_styles %}
  {% import '../_macros.twig' as macros %}

  <style>
    #kssref-patterns-leadership .leadership {
      width: 25%;
    }
  </style>
{% else %}
  {% import '@styleguide/_macros.twig' as macros %}
{% endif %}

{% set tag = tag ?: 'article' %}

{% spaceless %}
  <{{ tag }} class="leadership js-leadership {{ modifier_class }}"{{ attributes }}>
    <div class="leadership__image">
      {{ image }}
    </div>

    <div class="leadership__content">
      <div class="leadership__header">
        <div class="leadership__name">{{ name }}</div>
        <div class="leadership__position">{{ position }}</div>
      </div>

      {% if body %}
        <div class="leadership__body">
          {{ body }}
        </div>
      {% endif %}
    </div>


    {% if read_more %}
      <div class="leadership__read-more">
        {{ read_more }}
      </div>
    {% endif %}
  </{{ tag }}>
{% endspaceless %}
